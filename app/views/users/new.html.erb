<% provide(:title, "Sign up")%>


<div class="row">

  <div class="col-md-6 col-md-offset-3">
    <h1>Sign up</h1>
    <%= form_for @user do |f| %>

      <%= f.label :Email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :Password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.submit "Sign up!", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>
